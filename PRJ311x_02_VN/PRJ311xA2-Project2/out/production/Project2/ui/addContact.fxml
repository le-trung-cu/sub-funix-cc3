<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane hgap="10" vgap="10"
          xmlns="http://javafx.com/javafx/11.0.1"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="controller.AddContactController"
          prefWidth="543.0"
          prefHeight="353.0"
        style="-fx-padding: 15">
    <Label style="-fx-font-size: 17; -fx-font-weigh: bold;" text="Add a new Contact" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" />

    <Label text="Fist Name: " GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="firstName" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <Label fx:id="lblFirstName" text="error" GridPane.columnIndex="2" GridPane.rowIndex="1" textFill="#e13421" style="-fx-font-style: italic"/>

    <Label text="Last Name: " GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="lastName" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <Label fx:id="lblLastName" GridPane.columnIndex="2" GridPane.rowIndex="2" textFill="#e13421" style="-fx-font-style: italic"/>

    <Label text="Phone: " GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField fx:id="phone" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    <Label fx:id="lblPhone" GridPane.columnIndex="2" GridPane.rowIndex="3" textFill="#e13421" style="-fx-font-style: italic"/>

    <Label text="Email: " GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <TextField fx:id="email" GridPane.columnIndex="1" GridPane.rowIndex="4" />
    <Label fx:id="lblEmail" GridPane.columnIndex="2" GridPane.rowIndex="4" textFill="#e13421" style="-fx-font-style: italic"/>

    <Label text="Birth date: " GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <DatePicker fx:id="dob" GridPane.columnIndex="1" GridPane.rowIndex="5" />
    <Label fx:id="lbldob" GridPane.columnIndex="2" GridPane.rowIndex="5" textFill="#e13421" style="-fx-font-style: italic"/>

    <Label text="Group: " GridPane.columnIndex="0" GridPane.rowIndex="6" />
    <ComboBox fx:id="cbGroup" GridPane.columnIndex="1" GridPane.rowIndex="6" />

    <Button text="Save" GridPane.columnIndex="0" GridPane.rowIndex="7" onAction="#saveAction"/>
    <Button text="Close" GridPane.columnIndex="1" GridPane.rowIndex="7" onAction="#closeAction"/>
</GridPane>
